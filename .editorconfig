# http://editorconfig.org
root = true

[*]
indent_style = space
indent_size = 2

# We recommend you to keep these unchanged
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{html,js,scss,xml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
indent_size = 4

[*.rb]
indent_style = space
indent_size = 2

[*.py]
indent_style = space
indent_size = 4

[*.rs]
indent_style = space
indent_size = 4

[*.go]
indent_size = 4
indent_style = tab

[*ex]
indent_style = space
indent_size = 2
